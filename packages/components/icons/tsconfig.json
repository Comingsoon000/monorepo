{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "module":"commonjs",
    "outDir": "dist",
    "strict": true,
    "target": "es5",
    "moduleResolution": "node"
  },
  "parcel-plugin-typescript": {
    "transpileOnly": false
  },
  "include": [
    "src"
  ]
}
