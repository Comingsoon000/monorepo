{
  "name": "memebattle",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "init": "yarn lerna bootstrap",
    "bootstrap": "yarn tsc && yarn lerna bootstrap",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.jsx,.ts,.tsx",
    "tsc": "yarn lerna run tsc",
    "start": "yarn lerna run start",
    "build": "yarn lerna run build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "babel-loader-lerna-cra": {
    "imports": "packages/components/*",
    "apps": "apps/*"
  },
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@types/node": "^12.11.5",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react-app": "^6.0.3",
    "lerna": "^3.4.3",
    "prettier": "^1.18.2",
    "typescript": "^3.6.4"
  }
}
